extends layouts/main

block content
    .form-container
        form(action=routes.editItem(item.id), method="post")
            input(type="text", placeholder="Title", name="title", value=item.title)
            textarea(name="description", placeholder="Description")=item.description
            input(type="submit", value="Update Item")
        a.form-container__link(href=routes.deleteItem(item.id))
            button.delete Delete Item